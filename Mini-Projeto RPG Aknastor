func retornaMundos () -> String {
    print("""
                                    Deseja ver outro mundo? 
                                     (sim)          (nao)

""")
    let escolherNovoMundo = readLine()
    if escolherNovoMundo == "sim" {
        return escolhaMundo()
    } else {
        return "Ok, vocÃª fez uma boa escolha! â•°â”ˆâ¤"
    }
}
    
    func escolhaArma (_ armasDanos: [Int: Int]) -> (arma: String, dadoDano: Int ) {
        let escolhaA = readLine()
        if let existeEscolhaA = escolhaA {
            switch existeEscolhaA {
            case "1":
                return("Sua arma escolhida foi Espada. Ela pode dar, de dano mÃ¡ximo, atÃ©", armasDanos[1]!)
            case "2":
                return("Sua arma escolhida foi LanÃ§a. Ela pode dar, de dano mÃ¡ximo, atÃ©", armasDanos[2]!)
            case "3":
                return("Sua arma escolhida foi Arco e Flecha. Ele pode dar, de dano mÃ¡ximo, atÃ©", armasDanos[3]!)
            case "4":
                return("Sua arma escolhida foi Machado. Ele pode dar, de dano mÃ¡ximo, atÃ©", armasDanos[4]!)
            default:
                return("OpÃ§Ã£o invÃ¡lida. VocÃª receberÃ¡ a Espada. Ela pode dar, de dano mÃ¡ximo, atÃ©", armasDanos[1]!)
            }
        }
        return("VocÃª nÃ£o digitou nada. VocÃª receberÃ¡ a Espada. Ela pode dar, de dano mÃ¡ximo, atÃ©", armasDanos[1]!)
    }

func batalha () -> String {
    var rodada = 0
    var dano1 = 0
    var dano2 = 0
    var vida1 = 50
    var vida2 = 50
    
    while vida1>0 && vida2>0 {
        print("""

   â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• RODADA \(rodada) â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
""")
        dano1 = Int.random(in: 1...arma1.dadoDano)
        dano2 = Int.random(in: 1...arma2.dadoDano)
        
        if rodada == 0 {
            print("\(nomeJogador), dÃª seu primeiro dano!! (ENTER)")
            esperaEnter()
            print("\(nomeJogador) causou \(dano1) de dano em \(nomeJogador2)\n")
            
            print("\(nomeJogador2) Vai deixar??? CONTRA-ATAQUE!!!!! (ENTER)")
            esperaEnter()
            print("\(nomeJogador2) causou \(dano2) de dano em \(nomeJogador)\n")
        } else if rodada < 6 {
            print("\(nomeJogador), dÃª seu dano!! (ENTER)")
            esperaEnter()
            print("\(nomeJogador) causou \(dano1) de dano em \(nomeJogador2)\n")
            
            print("\(nomeJogador2), dÃª seu dano!! (ENTER)")
            esperaEnter()
            print("\(nomeJogador2) causou \(dano2) de dano em \(nomeJogador)\n")
        } else {
            print("Isso tÃ¡ acirrado... \(nomeJogador), dÃª seu dano!! (ENTER)")
            esperaEnter()
            print("\(nomeJogador) causou \(dano1) de dano em \(nomeJogador2)\n")
            
            print("Vai \(nomeJogador2), vamos acabar com isso, dÃª seu dano!! (ENTER)")
            esperaEnter()
            print("\(nomeJogador2) causou \(dano2) de dano em \(nomeJogador)\n")
        }
        
        vida1 -= dano2
        vida2 -= dano1
        
        if vida1 < 0 {
            vida1 = 0
        } else if vida2 < 0 {
            vida2 = 0
        }
        
        print("""
           STATUS: 
           \(nomeJogador) = \(vida1) de vida
           \(nomeJogador2) = \(vida2) de vida
""")
        
        rodada+=1
    }
    
    
    print("""

â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• FIM DO COMBATE!!!â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
""")

    if vida1==0 && vida2==0 {
        return "EMPATE! Isso Ã© raro, hein! ENTRETENIMENTO DUPLICADO!!"
    } else if vida1==0 {
        return "\(nomeJogador2) VENCEU!! Obrigada \(nomeJogador) por seu sacrifÃ­cio, ele nunca serÃ¡ esquecido."
    } else {
        return "\(nomeJogador) VENCEU!! Obrigada \(nomeJogador2) por seu sacrifÃ­cio, ele nunca serÃ¡ esquecido."
    }
}
    
